NODE_ENV=development
PORT=3000

# PostgreSQL connection (Prisma)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/book_hub?schema=public

# JWT
JWT_SECRET=change_me_super_secret
JWT_EXPIRES_IN=7d

# SMTP (for real emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_IGNORE_TLS=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM="Book Hub <no-reply@bookhub.local>"

# Email testing helpers
MAIL_TEST_ETHEREAL=false
MAIL_DRY_RUN=true

# Cloudinary (image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
